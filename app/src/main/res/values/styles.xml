<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@android:color/white</item>

    </style>

    <style name="Label.CurrencyIso" parent="TextAppearance.AppCompat.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Label.CurrencyName" parent="TextAppearance.AppCompat.Body1">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Label.Status" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#dfff</item>
    </style>

    <style name="Edit.CurrencyValue" parent="Widget.AppCompat.EditText" />

</resources>